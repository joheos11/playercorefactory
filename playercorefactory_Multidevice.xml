<playercorefactory>
<players>

<player name="[B][COLOR white]AceStream[/COLOR][B][COLOR red] ANDROID[/COLOR][/B]" type="ExternalPlayer" audio="false" video="true">
  <filename>org.acestream.media</filename>
  <args>"{1}" --fullscreen</args>
