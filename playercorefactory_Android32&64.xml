<?xml version="1.0" encoding="UTF-8"?>
<playercorefactory>
    <players>
        <!-- VLC como reproductor externo -->
        <player name="VLC" type="ExternalPlayer" audio="false" video="true">
            <filename>android.intent.action.VIEW</filename>
            <args>
                -a android.intent.action.VIEW
                -d "{1}"
                -p org.videolan.vlc
            </args>
            <hidexbmc>true</hidexbmc>
            <forceontop>false</forceontop>
        </player>
        <!-- AceStream 32 bits -->
        <player name="AceStream32" type="ExternalPlayer" audio="false" video="true">
            <filename>android.intent.action.VIEW</filename>
            <args>
                -a android.intent.action.VIEW
                -d "{1}"
                -p org.acestream.engine
            </args>
            <hidexbmc>true</hidexbmc>
            <forceontop>false</forceontop>
        </player>
        <!-- AceStream 64 bits (por si tuvieras instalada la versiÃ³n 64 bits) -->
        <player name="AceStream64" type="ExternalPlayer" audio="false" video="true">
            <filename>android.intent.action.VIEW</filename>
            <args>
                -a android.intent.action.VIEW
                -d "{1}"
                -p org.acestream.engine
            </args>
            <hidexbmc>true</hidexbmc>
            <forceontop>false</forceontop>
        </player>
    </players>
    <rules>
        <!-- Usa AceStream para enlaces acestream:// -->
        <rule name="acestream32" filename="acestream://" player="AceStream32"/>
        <rule name="acestream64" filename="acestream://" player="AceStream64"/>
        <!-- Usa VLC para el resto de los videos -->
        <rule name="videos" filetypes="mkv|mp4|avi|mov|flv|wmv|m3u8|ts|webm" player="VLC"/>
    </rules>
</playercorefactory>
